[user]
	name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
[color]
	ui = auto
[color "diff"]
	meta = magenta
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
	editor = vim
[apply]
	whitespace = nowarn
[git-up "rebase"]
	arguments = --preserve-merges
[merge]
	ff = false
[push]
	default = simple
[pretty]
	normal = %C(yellow)%h%Creset %s %C(cyan)(%an, %cr)%Creset
	decorate = %C(yellow)%h%C(yellow)%d%Creset %s %C(cyan)(%an, %cr)%Creset
