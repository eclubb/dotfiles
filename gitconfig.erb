[user]
	name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
	co = checkout
	ci = commit
	st = status
	br = branch
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --relative-date --decorate
[color]
	ui = auto
[color "diff"]
	meta = magenta
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
	editor = vim
[apply]
	whitespace = nowarn
[format]
	pretty = %C(yellow)%h%Creset %s %C(cyan)(%an, %cr)%Creset
[git-up "rebase"]
	arguments = --preserve-merges
[merge]
	ff = false
[push]
	default = simple
